{% extends '/layout/default_layout.twig' %}
{% block container %}
    <section class="bg-gray-darkest context-dark mt-5 pt-2" id="reserve-now">
          <div class="container">
            <h1><span class="d-block font-accent big">Reserva Ahora</span><span class="d-block offset-top-4 h3 text-uppercase">CADA INVITADO ES ESPECIAL AQUI</span></h1>
            <hr class="divider bg-mantis offset-top-30">
            <!-- RD Mailform-->
            <form class="rd-mailform text-left" data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php">
              <div class="row grid-group-sm">
                <div class="col-md-6 col-lg-3">
                  <div class="form-group has-feedback">
                    <label class="form-label form-label-sm form-label-outside" for="form-reserve-name">Nombre:</label>

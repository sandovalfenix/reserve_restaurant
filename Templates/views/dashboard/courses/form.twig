  <div class="modal-dialog modal-sm">
    <form method="post" action="/course/new">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title" id="courseModalLabel">Evento</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="input-group input-group-icon icon-left input-group-lg">
              <input class="form-control form-control-lg" type="text" placeholder="Nombre Evento" name="name" value="{{Course.name}}" requiered>
              <span class="input-icon fas fa-tags"></span>
            </div>
            <div class="form-group">
              <label class="control-label">Fecha Inicial</label>
              <input class="form-control form-control-lg" type="date" name="dateStart" value="{{Course.dateStart}}" requiered>
            </div>
            <div class="form-group">
              <label class="control-label">Fecha Final</label>
              <input class="form-control form-control-lg" type="date" name="dateFinal" value="{{Course.dateFinal}}" requiered>
              <input type="hidden" name="idCourse" value="{{Course.idCourse|encrypt}}">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
          {% if Course.idCourse %}
              <button type="submit" class="btn btn-warning">Editar</button>
          {% else %}
              <button type="submit" class="btn btn-success">AÃ±adir</button>
          {% endif %}        
        </div>
      </div>    
    </form>
  </div>
</div>
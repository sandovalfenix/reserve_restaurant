{% extends "layout/dashboard_layout.twig" %}
{% use 'views/dashboard/nav.twig' %}
{% block stylesheet %}    
	<link rel="stylesheet" href="{{assets}}/vendor/fullcalendar/fullcalendar.min.css">
{% endblock %}
{% block container %}
	{% include 'views/dashboard/sidebar.twig' %}
	<div class="page-content">		
	{% if alert %}
	<div class="alert action-alert action-alert--{{alert.type}} has-btn m-4" role="alert">
	  <span class="action-alert__message">
	  	{{alert.msj|raw }}
	  </span>
	  <span class="close ua-icon-alert-close action-alert__close" data-dismiss="alert"></span>
	</div>
	{% endif %}
		<div class="container-fluid m-scheduler">
		  <div class="page-content__header">
		    <div>
		      <h2 class="page-content__header-heading">Eventos</h2>
		      <div class="page-content__header-description">Dashboard DataBase</div>
		    </div>
		  </div>
		  <div class="main-container m-scheduler__container">
		    <div class="m-scheduler__header">
		      <div class="m-scheduler__header-item">
		        <h5 class="m-scheduler__heading">Eventos</h5>
		        <span class="m-scheduler__time">{{ "now"|date("h:m") }}</span>
		      </div>
		      <div class="m-scheduler__header-item">
		        <div class="m-scheduler__progress">
		          <span>Capacity 173/230</span>
		          <div class="progress progress-sm progress-rounded mb-0">
		            <div class="progress-bar bg-info" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
		          </div>
		        </div>
		        {% if session.ROLE == 'SADMIN' or session.ROLE == 'ADMIN' %}
		        <a href="#" class="m-scheduler__add-event" data-toggle="modal" data-target="#modalCourse"><span class="ua-icon-plus-circle-lg"></span></a>
		    	{% endif %}
		      </div>
		    </div>
		    <div id="m-scheduler-calendar" class="m-scheduler__calendar"></div>
		    <div class="m-scheduler__footer">
		      {% if session.ROLE == 'SADMIN' or session.ROLE == 'ADMIN' %}
		      <a href="#" class="m-scheduler__footer-add-event" data-toggle="modal" data-target="#modalCourse"><span class="ua-icon-plus-circle-outline"></span> Nuevo Evento</a>
		      {% endif %}
		    </div>
		  </div>
		</div>
	</div>
	<div class="modal fade" id="modalCourse" tabindex="-1" role="dialog" aria-labelledby="courseModalLabel" aria-hidden="true">
		{% include 'views/dashboard/courses/form.twig' %}
	</div>
	<div id="deletedEvent" class="modal fade" role="dialog">
	  <div class="modal-dialog modal-sm">
	    <!-- Modal content-->
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title">Notificación</h4>
	      </div>
	      <div class="modal-body">
	        <p>¿Esta seguro que desea eliminar este registro?</p>
	      </div>

	      <form method="post">
	      	<div class="modal-footer text-center">
	        	<button type="submit" class="btn btn-danger btn-block btn-lg"><i class="fa fa-trash"></i> Eliminar</button>
	      	</div>
	      </form>
	    </div>

	  </div>
	</div>
{% endblock %}
{% block script %}
    <script src="{{assets}}/vendor/momentjs/moment.min.js"></script>
	<script src="{{assets}}/vendor/fullcalendar/fullcalendar.min.js"></script>
	<script src="{{assets}}/vendor/fullcalendar/lang/es.js"></script>
	<script src="{{assets}}/js/preview/scheduler.min.js"></script>
	<script>
		$(function() {
		});
	</script>
{% endblock %}